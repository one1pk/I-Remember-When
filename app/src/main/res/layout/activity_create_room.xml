<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CreateRoomActivity">

    <EditText
        android:id="@+id/TextMultiLine"
        android:layout_width="0dp"
        android:layout_height="153dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="482dp"
        android:ems="10"
        android:fontFamily="@font/cabin_semibold"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Share this 4 digit code with your friends. when all have joined hit the ready button"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/readyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDisplayRoomID"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="383dp"
        android:fontFamily="@font/cabin"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/readyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextMultiLine"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/readyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="33dp"
        android:onClick="readyUp"
        android:text="READY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="168dp"
        android:layout_marginRight="175dp" />

</android.support.constraint.ConstraintLayout>